<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.woory.almostthere">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AlmostThereApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlmostThere"
        tools:targetApi="31">

        <activity android:name=".ui.promises.PromisesActivity"
            android:exported="false" />

        <activity
            android:name=".ui.gameresult.GameResultActivity"
            android:exported="false" />

        <activity
            android:name=".ui.gaming.GamingActivity"
            android:exported="false" />

        <activity
            android:name=".ui.promiseinfo.PromiseInfoActivity"
            android:exported="false" />

        <activity
            android:name=".ui.join.JoinActivity"
            android:exported="false" />

        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />

        <activity
            android:name=".ui.creatingpromise.CreatingPromiseActivity"
            android:exported="false" />

        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AlmostThere.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.woory.almostthere.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="com.woory.almostthere.initializer.TimberInitializer"
                android:value="androidx.startup" />
        </provider>

    </application>

</manifest>